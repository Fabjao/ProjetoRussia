@model ProjetoRussia.ViewModel.ViewModelSelecao

@{
    ViewData["Title"] = "Cadastrar Jogador";
}

<h2>Cadastrar Jogador</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Seleção selecionado:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.selecao.Nome)
        </dd>
    </dl>
</div>
<div>
    <h4>Jogadores</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(modelItem => Model.jogador.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.jogador.Time)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.jogadores)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.ActionLink("Excluir", "ExcluirJogador", new { jogadorID = item.JogadorId, selecaoId = item.SelecaoId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarJogador">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="jogador.Nome" class="control-label"></label>
                <input asp-for="jogador.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="jogador.Idade" class="control-label"></label>
                <input asp-for="jogador.Idade" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="jogador.Time" class="control-label"></label>
                <input asp-for="jogador.Time" class="form-control" />
                @Html.HiddenFor(x => x.selecao.SelecaoId)
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista de seleção</a>
</div>

