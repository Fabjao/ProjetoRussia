@model ProjetoRussia.Core.Models.Selecao

@{
    ViewData["Title"] = "Detalhes da Seleção";
}

<h2>Detalhes da Seleção</h2>

<div>
    <hr />
    <dl class="dl-horizontal">        
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <tbody>
            @foreach (var item in Model.Jogadores)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>                    
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Voltar a lista de seleção</a>
</div>
