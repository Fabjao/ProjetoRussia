@model ProjetoRussia.Core.Models.Selecao

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Selecao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Alterar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelecaoId" class="control-label">Id</label>
                <input asp-for="SelecaoId" class="form-control" readonly />
                <span asp-validation-for="SelecaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista de seleção</a>
</div>

